{
  "version": 2,
  "buildCommand": "vite build && esbuild server-api/index.ts --bundle --platform=node --packages=external --format=esm --alias:@shared=./shared --alias:@=./client/src --outfile=api/server.js",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
